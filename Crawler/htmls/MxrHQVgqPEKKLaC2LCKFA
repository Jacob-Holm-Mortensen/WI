<script type="text/javascript">
    $(function () {
        $.ajax({
            type: "GET",
            dataType: 'json',
            url: "/handlers/Site/Home/GetEventCountDown.ashx",
            success: function (resp) {
                if (resp.success) {
                    $('input#HeaderEvent').val(resp.data.eventStart);

                    var date = new Date(0);
                    date.setUTCSeconds(resp.data.eventStart);

                    if (date) {
                        $('#defaultCountdown').countdown({
                            until: date,
                            labels: ['Yr', 'Mo', 'Wk', 'Days', 'Hrs', 'Min', 'Sec'],
                            labels1: ['Yr', 'Mo', 'Wk', 'Day', 'Hr', 'Min', 'Sec']
                        });
                    }

                    if (resp.data.events.length > 0) {
                        $('p#countdown_to_what').html(resp.data.events.join('<br/>'));
                    }

                    $('div#countdownContainer').show();
                }
            }
        });
    });
</script>
    
