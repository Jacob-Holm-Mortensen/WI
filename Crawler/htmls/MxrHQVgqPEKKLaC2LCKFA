		<script type="text/javascript">

		    $(document).ready(function () {
		        var eventType = $('#nodeAlias').val();

		        viewData = {
		            Events: ko.observable({})
		        };

		        ko.applyBindings(viewData, $('#event_list')[0]);

		        function UpdateEvents(eventType) {
		            var langId = $('#langid').val();
		            var qty = 5;
		            var response;
		            $.ajax({
		                type: "GET",
		                url: "/handlers/Events.ashx",
		                data: {
		                    "EventType": eventType,
		                    "qty": qty,
		                    "langId": langId
		                },
		                success: function (data) {
		                    viewData.Events(data);
		                    $('#upcoming-events .dropdown .dd_selected_item').html(eventType);
		                }
		            });   //end ajax
		        }

		        $('#whats-next .dd_menu li a').click(function () {
		            UpdateEvents(this.parentNode.id);
		        });

		        // update on load
		        UpdateEvents(eventType);
		    });
		</script>

		<script id="whatsNextRow" type="text/html">
		{{each Events}}
		<li>
            <div class="event-date-loc">
                <strong>${DateTitle}</strong>
                <em>${Location}</em>
            </div><!-- .event-date-loc -->
                        
            <a href="${Url}" class="event_name">
                ${EventName}
            </a><!-- .event_name -->
        </li>
		{{/each}}
		</script>

